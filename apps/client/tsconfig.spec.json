{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"]
  },
  "files": ["src/test-setup.ts"],
  "include": ["**/*.test.ts", "**/*.spec.ts", "**/*.d.ts"],
  "paths": {
    "@shared/*": [
      "apps/client/src/app/shared/*"
    ],
    "@core/*": [
      "apps/client/src/app/core/*"
    ],
    "@pages/*": [
      "apps/client/src/app/modules/pages/*"
    ],
    "@app/*": [
      "apps/client/src/app/*"
    ],
    "@components/*": [
      "apps/client/src/app/shared/components/*"
    ],
    "@assets/*": [
      "apps/client/src/assets/*"
    ],
    "@environments/*": [
      "apps/client/src/environments/*"
    ]
  },
}
